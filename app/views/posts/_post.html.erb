<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Published At:</strong>
    <%= post.published_at %>
  </p>

  <p>
    <% if post.published? %>
      <strong>Published</strong>
    <% else %>
      <strong>Unpublished</strong>
    <% end %>
  </p>

</div>
