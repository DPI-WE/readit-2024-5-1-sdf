<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5><%= post.title %></h5>
    <div class="d-flex align-items-center">
      <% if policy(post).edit? %>
        <%= link_to edit_post_path(post), class: "me-2" do %>
          <i class="fa-solid fa-pen-to-square fa-xl"></i>
        <% end %>
      <% end %>
      <% if policy(post).destroy? %>
        <%= button_to post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" do %>
          <i class="fa-solid fa-trash fa-xl text-danger"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= post.body %></p>
      <footer class="blockquote-footer my-2">
        <%= image_tag post.author.avatar_or_default, class: "rounded-circle max-width-2" %>
        <span class="ms-2"><%= post.author.email %></span>
      </footer>
    </blockquote>
  </div>
</div>
