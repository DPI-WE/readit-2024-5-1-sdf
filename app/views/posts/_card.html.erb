<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5><%= post.title %></h5>
    <div class="d-flex align-items-center">
      <%= link_to edit_post_path(post), class: "me-2" do %>
        <i class="fa-solid fa-pen-to-square fa-xl"></i>
      <% end %>
      <%= button_to post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" do %>
        <i class="fa-solid fa-trash fa-xl text-danger"></i>
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= post.body %></p>
      <footer class="blockquote-footer"><%= post.author.email %></footer>
    </blockquote>
  </div>
</div>
