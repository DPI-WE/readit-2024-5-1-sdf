<!-- post -->

<%= link_to post_path(post), class: "list-group-item list-group-item-action d-flex align-items-center justify-content-between" do %>
  <div>
    <h5><%= post.title %></h5>
    <%= post.body.truncate_words(15) %>
  </div>

  <div>
    <i class="fa-solid fa-chevron-right fa-xl"></i>
  </div>
<% end %>
